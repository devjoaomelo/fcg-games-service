{
  "family": "fcg-games-task",
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::536765581095:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::536765581095:role/fcg-app-role",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "<IMAGE1_NAME>",
      "essential": true,
      "dependsOn": [
        { "containerName": "adot-collector", "condition": "START" }
      ],
      "portMappings": [
        { "containerPort": 8080, "protocol": "tcp" }
      ],
      "environment": [
        { "name": "ASPNETCORE_URLS", "value": "http://+:8080" },
        { "name": "AWS__REGION", "value": "us-east-2" },
        { "name": "Search__UseOpenSearch", "value": "false" },
        { "name": "OTEL_EXPORTER_OTLP_PROTOCOL", "value": "grpc" },
        { "name": "OTEL_EXPORTER_otlp_PROTOCOL", "value": "grpc" }, 
        { "name": "OTEL_EXPORTER_OTLP_ENDPOINT", "value": "http://127.0.0.1:4317" },
        { "name": "OTEL_SERVICE_NAME", "value": "FCG.Games.Api" },
        { "name": "OTEL_RESOURCE_ATTRIBUTES", "value": "service.version=1.0.0,service.namespace=fcg,deployment.environment=prod" }
      ],
      "secrets": [
        { "name": "ConnectionStrings__GamesDb", "valueFrom": "arn:aws:ssm:us-east-2:536765581095:parameter/fcg/games/ConnectionStrings__GamesDb" },
        { "name": "Jwt__Key", "valueFrom": "arn:aws:ssm:us-east-2:536765581095:parameter/fcg/users/Jwt__Key" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fcg-games",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    },
    {
      "name": "adot-collector",
      "image": "public.ecr.aws/aws-observability/aws-otel-collector:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 4317, "hostPort": 4317, "protocol": "tcp" }
      ],

      "environment": [
        { "name": "AWS_REGION", "value": "us-east-2" },
        { "name": "AWS_OTEL_COLLECTOR_CONFIG_CONTENT",
          "value": "receivers:\n  otlp:\n    protocols:\n      grpc:\n        endpoint: 0.0.0.0:4317\nprocessors:\n  batch: {}\nexporters:\n  awsxray: {}\nservice:\n  pipelines:\n    traces:\n      receivers: [otlp]\n      processors: [batch]\n      exporters: [awsxray]\n"
        }
      ],

      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/fcg-adot",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
